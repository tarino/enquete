<%= form_for(@survey) do |f| %>
  <% if @survey.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@survey.errors.count, "error") %> prohibited this survey from being saved:</h2>

      <ul>
      <% @survey.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<table border="1" bordercolor="#333333">
<tr>
<th>メニュー</th>
<th>項目</th>
</tr>
<tr>
	<th>アンケート名</th>
	<td><%= f.text_field :name %></td>
</tr>

<tr>
	<th>アンケート説明</th>
	<td><%= f.text_area :note %></td>
</tr>

<tr>
	<th>回答期限</th>
	<td>
		<%= f.date_select :date %>
	</td>
</tr>

<tr>
	<th>回答タイプ</th>
	<td>
		<%= f.text_field :type %>
	</td>
</tr>

<tr>
	<th>選択肢</th>
	<td>
		<%= f.text_field :type %></br>
		※セミコロン区切りで入力
	</td>
</tr>
	
</table>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<h1>Listing surveys</h1>

<table>
  <tr>
    <th>Id</th>
    <th>Name</th>
    <th>Note</th>
    <th>Date</th>
    <th>Type</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @surveys.each do |survey| %>
  <tr>
    <td><%= survey.id %></td>
    <td><%= survey.name %></td>
    <td><%= survey.note %></td>
    <td><%= survey.date %></td>
    <td><%= survey.type %></td>
    <td><%= link_to 'Show', survey %></td>
    <td><%= link_to 'Edit', edit_survey_path(survey) %></td>
    <td><%= link_to 'Destroy', survey, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

